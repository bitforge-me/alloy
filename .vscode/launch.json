    "version": "0.2.0",
    "configurations": [
        {
            "name": "alloy (web)",
            "request": "launch",
            "type": "dart",
            // use specific port so apps 'localstorage' is consistent
            "args": ["-d", "chrome", "--web-port", "8686"]
        },
        {
            "name": "alloy (win)",
            "request": "launch",
            "type": "dart",
            "args": ["-d", "windows"]
        },
        {
            "name": "alloy (linux)",
            "request": "launch",
            "type": "dart",
            "args": ["-d", "linux"]
        },
        {
            "name": "alloy (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        }
    ]
}